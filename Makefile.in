PACKAGE=sgml
DOC=sgml
include ../Makefile.defs

CFLAGS+= -I.
SUBTEX=xpath.tex pwp.tex

EXEEXT=@EXEEXT@
LIBS=@LIBS@

LIBOBJ=		parser.o util.o charmap.o catalog.o model.o xmlns.o utf8.o \
		xml_unicode.o
PLOBJ=		$(LIBOBJ) error.o sgml2pl.o quote.o
SGMLOBJ=	$(LIBOBJ) sgml.o
DTD2PLOBJ=	$(LIBOBJ) dtd2pl.o prolog.o

HDRS=		catalog.h dtd.h model.h prolog.h utf8.h xmlns.h \
		config.h error.h parser.h sgmldefs.h util.h

ALLCSRC=	$(LIBOBJ:.o=.c) \
		$(PLOBJ:.o=.c) $(SGMLOBJ:.o=.c) $(DTD2PLOBJ:.o=.c) \
		$(HDRS)

LIBPL=		sgml.pl xsdp_types.pl iso_639.pl sgml_write.pl xpath.pl \
		pwp.pl
TARGETS=	sgml2pl.@SO@
PROGRAMS=	dtd2pl$(EXEEXT) sgml$(EXEEXT)
DTDFILES=	HTML4.dcl HTML4.dtd HTML4.soc \
		HTMLlat1.ent HTMLspec.ent HTMLsym.ent

all:		coflags $(TARGETS) $(PROGRAMS)

coflags::
		@echo $(COFLAGS) > .coflags

sgml2pl.@SO@:	$(PLOBJ)
		$(LD) $(LDSOFLAGS) -o $@ $(PLOBJ) $(LIBS)

install:	$(TARGETS) $(LIBPL) install-dtd
		mkdir -p $(DESTDIR)$(SOLIBDIR)
		$(INSTALL_PROGRAM) $(TARGETS) $(DESTDIR)$(SOLIBDIR)
		$(INSTALL_DATA) $(LIBPL) $(DESTDIR)$(PLLIBDIR)
		$(MKINDEX)

ln-install::
		@$(MAKE) INSTALL_DATA=../ln-install \
			 INSTALL_PROGRAM=../ln-install \
			 install

rpm-install:	install

install-dtd::
		mkdir -p $(DESTDIR)$(PLLIBDIR)/DTD
		for f in $(DTDFILES); do \
		   $(INSTALL_DATA) DTD/$$f $(DESTDIR)$(PLLIBDIR)/DTD; \
		done

pdf-install::
		mkdir -p $(DESTDIR)$(PKGDOCDIR)
		$(INSTALL_DATA) sgml.pdf $(DESTDIR)$(PKGDOCDIR)

html-install::
		mkdir -p $(DESTDIR)$(PKGDOCDIR)
		$(INSTALL_DATA) sgml.html $(DESTDIR)$(PKGDOCDIR)

check::
		$(PL) -f Test/test.pl -g test,halt
		$(PL) -f Test/wrtest.pl -g test,halt

uninstall::
		(cd $(SOLIBDIR) && rm -f $(TARGETS))
		(cd $(PLBASE)/library && rm -f $(LIBPL))
		$(MKINDEX)

dtd2pl$(EXEEXT):	$(DTD2PLOBJ)
		$(LD) $(LDFLAGS) -o $@ $(DTD2PLOBJ) $(LIBS) -lswipl

sgml$(EXEEXT):		$(SGMLOBJ)
		$(LD) $(LDFLAGS) -o $@ $(SGMLOBJ) $(LIBS) -lswipl

tags:		TAGS

TAGS:		$(ALLCSRC)
		etags $(ALLCSRC)

################################################################
# Documentation
################################################################

xpath.tex:	xpath.pl
		$(PLTOTEX) --out=$@ --section 'library(xpath)'

pwp.tex:	pwp.pl
		$(PLTOTEX) --out=$@ --section 'library(pwp)'

################################################################
# Clean
################################################################

clean::
		rm -f $(PLOBJ) *~ *.o *% a.out core config.log

distclean:	clean
		rm -f $(TARGETS) $(PROGRAMS)
		rm -f config.cache config.h config.status Makefile
		rm -f .coflags

